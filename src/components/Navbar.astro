---
const currentPath = Astro.url.pathname;

const navItems = [
  { name: 'Inicio', href: '/' },
  { name: 'Servicios', href: '/servicios' },
  { name: 'Profesionales', href: '/profesionales' },
  { name: 'Turnos', href: '/turnos' },
  { name: 'Horarios', href: '/horarios' },
];
---

<nav class="bg-white/98 backdrop-blur-xl shadow-md sticky top-0 z-50 border-b border-primary/10">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-14">
      <!-- Logo & Brand -->
      <a href="/" class="flex items-center space-x-2 group hover:opacity-80 transition-opacity duration-300">
        <img 
          src="/imagenes/logo/logo2.svg" 
          alt="Instituto Médico del Sur" 
          class="navbar-logo h-8 w-8 object-contain object-center group-hover:scale-105 transition-transform duration-300"
        />
        <div>
          <div class="text-sm lg:text-base font-bold bg-gradient-to-r from-primary via-secondary to-accent bg-clip-text text-transparent leading-tight">
            Instituto Médico del Sur
          </div>
          <div class="text-xs text-gray-500 font-medium hidden sm:block">Trelew, Chubut</div>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'relative px-4 py-2 font-medium text-sm transition-all duration-300 rounded-lg',
              currentPath === item.href
                ? 'text-primary bg-primary/5'
                : 'text-gray-700 hover:text-primary hover:bg-primary/5'
            ]}
          >
            <span class="relative z-10">{item.name}</span>
            {currentPath === item.href && (
              <span class="absolute bottom-1 left-1/2 -translate-x-1/2 w-1/2 h-0.5 bg-gradient-to-r from-primary to-secondary rounded-full"></span>
            )}
          </a>
        ))}
        <a 
          href="tel:2804421121" 
          class="ml-4 px-5 py-2.5 bg-gradient-to-r from-primary to-secondary hover:from-secondary hover:to-primary text-white font-semibold rounded-xl transition-all duration-300 shadow-md hover:shadow-xl hover:scale-105 flex items-center gap-2 group"
        >
          <svg class="w-4 h-4 group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <span class="hidden xl:inline">Llamar</span>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden relative w-10 h-10 rounded-lg hover:bg-primary/5 transition-all duration-300 flex items-center justify-center group"
        aria-label="Menú"
      >
        <div class="relative w-5 h-4 flex flex-col justify-between">
          <span class="w-full h-0.5 bg-gray-700 group-hover:bg-primary rounded-full transition-all duration-300 menu-line-1"></span>
          <span class="w-full h-0.5 bg-gray-700 group-hover:bg-primary rounded-full transition-all duration-300 menu-line-2"></span>
          <span class="w-full h-0.5 bg-gray-700 group-hover:bg-primary rounded-full transition-all duration-300 menu-line-3"></span>
        </div>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="lg:hidden overflow-hidden transition-all duration-300 max-h-0">
      <div class="py-4 space-y-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'block px-4 py-3 font-medium rounded-xl transition-all duration-300 text-sm',
              currentPath === item.href
                ? 'bg-gradient-to-r from-primary/10 to-secondary/10 text-primary border-l-4 border-primary'
                : 'text-gray-700 hover:bg-primary/5 hover:text-primary hover:translate-x-1'
            ]}
          >
            {item.name}
          </a>
        ))}
        <div class="pt-4 pb-2">
          <a 
            href="tel:2804421121" 
            class="flex items-center justify-center gap-3 px-6 py-3.5 bg-gradient-to-r from-primary to-secondary text-white font-bold rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-[1.02]"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span>280 4421121</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  let isOpen = false;
  
  button?.addEventListener('click', () => {
    isOpen = !isOpen;
    
    if (isOpen) {
      menu?.classList.remove('max-h-0');
      menu?.classList.add('max-h-96');
      button?.classList.add('menu-open');
    } else {
      menu?.classList.remove('max-h-96');
      menu?.classList.add('max-h-0');
      button?.classList.remove('menu-open');
    }
  });

  // Close menu when clicking outside
  document.addEventListener('click', (e) => {
    if (isOpen && !button?.contains(e.target as Node) && !menu?.contains(e.target as Node)) {
      isOpen = false;
      menu?.classList.remove('max-h-96');
      menu?.classList.add('max-h-0');
      button?.classList.remove('menu-open');
    }
  });

  // Close menu on route change
  document.addEventListener('astro:after-swap', () => {
    isOpen = false;
    menu?.classList.remove('max-h-96');
    menu?.classList.add('max-h-0');
    button?.classList.remove('menu-open');
  });
</script>

<style>
  /* Logo específico para navbar */
  .navbar-logo {
    width: 32px !important;
    height: 32px !important;
    max-width: 32px !important;
    max-height: 32px !important;
    min-width: 32px !important;
    min-height: 32px !important;
    flex-shrink: 0;
  }
  
  /* Animated hamburger menu */
  .menu-open .menu-line-1 {
    transform: translateY(7px) rotate(45deg);
  }
  .menu-open .menu-line-2 {
    opacity: 0;
  }
  .menu-open .menu-line-3 {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* Smooth scrollbar */
  #mobile-menu::-webkit-scrollbar {
    width: 4px;
  }
  #mobile-menu::-webkit-scrollbar-thumb {
    background: linear-gradient(to bottom, var(--color-primary), var(--color-secondary));
    border-radius: 10px;
  }
</style>
