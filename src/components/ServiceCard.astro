---
interface Props {
  title: string;
  description: string;
  icon: string;
  link?: string;
  whatsapp?: string;
}

const { title, description, icon, link, whatsapp } = Astro.props;
---

<div class="scard group">
  <!-- Decorative gradient blob -->
  <div class="scard-blob"></div>

  <div class="relative z-10 flex flex-col h-full">
    <div class="flex items-start gap-4 mb-5">
      <div class="scard-icon-wrap group-hover:scale-110 group-hover:-rotate-3 transition-all duration-300">
        <span class="text-2xl">{icon}</span>
      </div>
      <h3 class="scard-title pt-2">{title}</h3>
    </div>

    <p class="scard-desc flex-grow">{description}</p>

    <div class="flex flex-wrap gap-3 mt-6">
      {link && (
        <a href={link} class="scard-btn scard-btn--outline">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/></svg>
          Ver m√°s
        </a>
      )}
      {whatsapp && (
        <a
          href={`https://wa.me/549${whatsapp}`}
          target="_blank"
          rel="noopener noreferrer"
          class="scard-btn scard-btn--whatsapp"
        >
          <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
          WhatsApp
        </a>
      )}
    </div>
  </div>
</div>

<style>
  .scard {
    background: #fff;
    border: 1px solid rgba(0,116,183,0.08);
    border-radius: 20px;
    padding: 2rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 20px -4px rgba(0,116,183,0.07);
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
  }
  .scard:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 48px -8px rgba(0,116,183,0.15);
    border-color: rgba(0,116,183,0.20);
  }
  .scard-blob {
    position: absolute;
    top: -40px; right: -40px;
    width: 140px; height: 140px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(0,168,225,0.10) 0%, transparent 70%);
    transition: transform 0.5s ease;
  }
  .scard:hover .scard-blob { transform: scale(1.6); }

  .scard-icon-wrap {
    width: 52px;
    height: 52px;
    border-radius: 13px;
    background: linear-gradient(135deg, #0074B7, #00A8E1);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    box-shadow: 0 6px 16px -4px rgba(0,116,183,0.35);
  }
  .scard-title {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 1.05rem;
    font-weight: 700;
    color: #003554;
    line-height: 1.3;
    letter-spacing: -0.02em;
    transition: color 0.2s;
  }
  .scard:hover .scard-title { color: #0074B7; }

  .scard-desc {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.875rem;
    font-weight: 400;
    color: #64748b;
    line-height: 1.7;
  }

  .scard-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    border-radius: 10px;
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.8rem;
    font-weight: 600;
    transition: all 0.25s;
    text-decoration: none;
  }
  .scard-btn--outline {
    color: #0074B7;
    background: rgba(0,116,183,0.06);
    border: 1.5px solid rgba(0,116,183,0.16);
  }
  .scard-btn--outline:hover {
    background: rgba(0,116,183,0.11);
    border-color: rgba(0,116,183,0.32);
    transform: translateX(2px);
  }
  .scard-btn--whatsapp {
    color: #fff;
    background: linear-gradient(135deg, #22c55e, #16a34a);
    box-shadow: 0 4px 12px rgba(34,197,94,0.28);
  }
  .scard-btn--whatsapp:hover {
    box-shadow: 0 6px 18px rgba(34,197,94,0.40);
    transform: translateY(-1px);
  }
</style>
