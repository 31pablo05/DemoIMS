---
interface Props {
  title: string;
  subtitle?: string;
  cta?: {
    text: string;
    href: string;
  };
  secondary?: {
    text: string;
    href: string;
  };
  image?: string;
  variant?: 'primary' | 'secondary';
}

const { title, subtitle, cta, secondary, image, variant = 'primary' } = Astro.props;
---

<section 
  class:list={[
    'relative overflow-hidden py-20 md:py-32',
    variant === 'primary' ? 'bg-gradient-to-br from-primary via-secondary to-accent' : 'bg-gradient-to-br from-dark to-secondary'
  ]}
>
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="text-white">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
          {title}
        </h1>
        {subtitle && (
          <p class="text-xl md:text-2xl mb-8 text-white/90">
            {subtitle}
          </p>
        )}
        <div class="flex flex-col sm:flex-row gap-4">
          {cta && (
            <a 
              href={cta.href}
              class="bg-white text-dark hover:bg-gray-100 font-bold py-4 px-8 rounded-lg transition-all duration-300 shadow-xl hover:shadow-2xl text-center"
            >
              {cta.text}
            </a>
          )}
          {secondary && (
            <a 
              href={secondary.href}
              class="border-2 border-white text-white hover:bg-white hover:text-dark font-bold py-4 px-8 rounded-lg transition-all duration-300 text-center"
            >
              {secondary.text}
            </a>
          )}
        </div>
      </div>

      {image && (
        <div class="hidden md:block">
          <div class="relative">
            <div class="absolute inset-0 bg-white/20 backdrop-blur-sm rounded-2xl transform rotate-3"></div>
            <img 
              src={image} 
              alt={title}
              class="relative rounded-2xl shadow-2xl w-full h-auto"
            />
          </div>
        </div>
      )}
    </div>
  </div>
</section>
