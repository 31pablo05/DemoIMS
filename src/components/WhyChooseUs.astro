---

<section class="valores-section" aria-labelledby="valores-heading">

  <!-- Fondo con textura sutil -->
  <div class="vbg" aria-hidden="true">
    <div class="vbg-noise"></div>
    <div class="vbg-grad1"></div>
    <div class="vbg-grad2"></div>
    <div class="vbg-lines"></div>
  </div>

  <div class="valores-inner">

    <!-- HEADER -->
    <header class="valores-header" data-vanimate>
      <div class="v-eyebrow">
        <span class="v-eyebrow-line"></span>
        ¿Por qué elegirnos?
        <span class="v-eyebrow-line"></span>
      </div>
      <h2 id="valores-heading" class="v-title">
        Tu salud merece<br/><em>lo mejor</em>
      </h2>
      <p class="v-subtitle">
        Cada decisión que tomamos está guiada por un único objetivo: tu bienestar.
      </p>
    </header>

    <!-- GRID -->
    <div class="valores-grid">
      {valores.map((v, i) => (
        <article
          class="vcard"
          data-vanimate
          data-vi={i}
          style={`--vd: ${i * 90}ms`}
        >
          <div class="vcard-inner">
            <!-- número de orden -->
            <div class="vcard-num">0{i + 1}</div>

            <!-- icono -->
            <div class="vcard-icon" set:html={v.icon} />

            <!-- contenido -->
            <h3 class="vcard-title">{v.titulo}</h3>
            <p class="vcard-desc">{v.descripcion}</p>

            <!-- detalle pill -->
            <div class="vcard-pill">{v.detalle}</div>

            <!-- línea decorativa inferior -->
            <div class="vcard-rule"></div>
          </div>

          <!-- brillo hover -->
          <div class="vcard-sheen" aria-hidden="true"></div>
        </article>
      ))}
    </div>

    <!-- BOTTOM STRIP -->
    <div class="valores-strip" data-vanimate>
      <div class="strip-left">
        <div class="strip-pulse"></div>
        <span>Guardia activa ahora mismo</span>
      </div>
      <a href="/turnos" class="strip-cta">
        Solicitar turno
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>

  </div>
</section>

<style>
  /* ── SECTION ── */
  .valores-section {
    position: relative;
    padding: 120px 5% 100px;
    overflow: hidden;
    font-family: 'Inter', system-ui, sans-serif;
    background: #f7f9fc;
  }

  /* ── BACKGROUND ── */
  .vbg { position: absolute; inset: 0; pointer-events: none; }

  .vbg-noise {
    position: absolute; inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='1'/%3E%3C/svg%3E");
    opacity: 0.025;
    mix-blend-mode: multiply;
  }
  .vbg-grad1 {
    position: absolute;
    top: -120px; right: -100px;
    width: 600px; height: 600px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(0,116,183,0.07) 0%, transparent 70%);
  }
  .vbg-grad2 {
    position: absolute;
    bottom: -80px; left: -60px;
    width: 400px; height: 400px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(0,168,225,0.07) 0%, transparent 70%);
  }
  .vbg-lines {
    position: absolute; inset: 0;
    background-image:
      linear-gradient(to right, rgba(0,116,183,0.04) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(0,116,183,0.04) 1px, transparent 1px);
    background-size: 60px 60px;
  }

  /* ── INNER ── */
  .valores-inner {
    position: relative;
    z-index: 5;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* ── HEADER ── */
  .valores-header {
    text-align: center;
    margin-bottom: 72px;
    opacity: 0;
    transform: translateY(28px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }
  .valores-header.vvisible { opacity: 1; transform: translateY(0); }

  .v-eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 14px;
    font-size: 0.68rem;
    font-weight: 600;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: #0074B7;
    margin-bottom: 22px;
    font-family: 'Inter', system-ui, sans-serif;
  }
  .v-eyebrow-line {
    display: block;
    width: 32px; height: 1px;
    background: #0074B7;
    opacity: 0.4;
  }

  .v-title {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: clamp(2.2rem, 4.2vw, 3.5rem);
    font-weight: 800;
    color: #003554;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin: 0 0 20px;
  }
  .v-title em {
    font-style: normal;
    font-weight: 800;
    background: linear-gradient(135deg, #0074B7 0%, #00A8E1 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .v-subtitle {
    font-size: 1rem;
    font-weight: 400;
    color: #64748b;
    max-width: 480px;
    margin: 0 auto;
    line-height: 1.75;
  }

  /* ── GRID ── */
  .valores-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    margin-bottom: 56px;
  }

  /* ── CARD ── */
  .vcard {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    background: #fff;
    border: 1px solid rgba(0,116,183,0.08);
    box-shadow: 0 2px 16px rgba(0,53,84,0.05), 0 1px 3px rgba(0,53,84,0.04);
    opacity: 0;
    transform: translateY(32px);
    transition:
      opacity 0.65s ease var(--vd, 0ms),
      transform 0.65s ease var(--vd, 0ms),
      box-shadow 0.35s ease,
      border-color 0.35s ease;
    cursor: default;
  }
  .vcard.vvisible {
    opacity: 1;
    transform: translateY(0);
  }
  .vcard:hover {
    box-shadow: 0 20px 50px rgba(0,116,183,0.12), 0 4px 16px rgba(0,53,84,0.06);
    border-color: rgba(0,116,183,0.20);
    transform: translateY(-4px) !important;
  }

  /* sheen */
  .vcard-sheen {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(255,255,255,0) 0%, rgba(255,255,255,0.5) 50%, rgba(255,255,255,0) 100%);
    transform: translateX(-100%) skewX(-15deg);
    transition: transform 0s;
    pointer-events: none;
  }
  .vcard:hover .vcard-sheen {
    transform: translateX(200%) skewX(-15deg);
    transition: transform 0.7s ease;
  }

  .vcard-inner {
    padding: 40px 36px 36px;
    position: relative;
    z-index: 2;
  }

  /* order number */
  .vcard-num {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.65rem;
    font-weight: 700;
    letter-spacing: 0.18em;
    color: rgba(0,116,183,0.28);
    margin-bottom: 24px;
  }

  /* icon */
  .vcard-icon {
    width: 44px; height: 44px;
    color: #0074B7;
    margin-bottom: 24px;
    transition: transform 0.35s ease, color 0.3s;
  }
  .vcard-icon svg { width: 100%; height: 100%; }
  .vcard:hover .vcard-icon {
    transform: translateY(-4px) scale(1.05);
    color: #005A8C;
  }

  /* title */
  .vcard-title {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 1.05rem;
    font-weight: 700;
    color: #003554;
    margin: 0 0 12px;
    letter-spacing: -0.02em;
    transition: color 0.3s;
  }
  .vcard:hover .vcard-title { color: #0074B7; }

  /* desc */
  .vcard-desc {
    font-size: 0.875rem;
    font-weight: 400;
    color: #64748b;
    line-height: 1.7;
    margin: 0 0 20px;
  }

  /* pill */
  .vcard-pill {
    display: inline-block;
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.10em;
    text-transform: uppercase;
    color: #0074B7;
    background: rgba(0,116,183,0.07);
    border: 1px solid rgba(0,116,183,0.14);
    padding: 5px 12px;
    border-radius: 100px;
  }

  /* rule */
  .vcard-rule {
    position: absolute;
    bottom: 0; left: 36px; right: 36px;
    height: 2px;
    background: linear-gradient(90deg, #0074B7, #00A8E1);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s ease;
    border-radius: 2px;
  }
  .vcard:hover .vcard-rule { transform: scaleX(1); }

  /* ── BOTTOM STRIP ── */
  .valores-strip {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #003554;
    border-radius: 12px;
    padding: 22px 36px;
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.7s ease 0.5s, transform 0.7s ease 0.5s;
  }
  .valores-strip.vvisible { opacity: 1; transform: translateY(0); }

  .strip-left {
    display: flex;
    align-items: center;
    gap: 12px;
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.9rem;
    font-weight: 500;
    color: rgba(255,255,255,0.78);
  }
  .strip-pulse {
    width: 10px; height: 10px;
    border-radius: 50%;
    background: #4cde80;
    box-shadow: 0 0 0 0 rgba(76,222,128,0.5);
    animation: vstrip-pulse 2s ease-out infinite;
    flex-shrink: 0;
  }
  @keyframes vstrip-pulse {
    0%   { box-shadow: 0 0 0 0   rgba(76,222,128,0.5); }
    70%  { box-shadow: 0 0 0 10px rgba(76,222,128,0); }
    100% { box-shadow: 0 0 0 0   rgba(76,222,128,0); }
  }

  .strip-cta {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: linear-gradient(135deg, #0074B7, #00A8E1);
    color: #fff;
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.82rem;
    font-weight: 700;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    padding: 13px 28px;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.25s ease;
    box-shadow: 0 4px 16px rgba(0,116,183,0.35);
  }
  .strip-cta:hover {
    background: linear-gradient(135deg, #005A8C, #0074B7);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0,116,183,0.45);
  }
  .strip-cta svg { transition: transform 0.25s; }
  .strip-cta:hover svg { transform: translateX(4px); }

  /* ── RESPONSIVE ── */
  @media (max-width: 960px) {
    .valores-grid { grid-template-columns: repeat(2, 1fr); }
  }
  @media (max-width: 580px) {
    .valores-section { padding: 80px 5% 70px; }
    .valores-grid { grid-template-columns: 1fr; gap: 16px; }
    .valores-strip { flex-direction: column; gap: 20px; text-align: center; }
    .vcard-inner { padding: 32px 28px 28px; }
  }
</style>

<script>
  const vEls = document.querySelectorAll('[data-vanimate]');
  const vObs = new IntersectionObserver((entries) => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.classList.add('vvisible');
        vObs.unobserve(e.target);
      }
    });
  }, { threshold: 0.12 });
  vEls.forEach(el => vObs.observe(el));
</script>