---
interface Props {
  name: string;
  specialty: string;
  mp?: string;
}

const { name, specialty, mp } = Astro.props;
---

<div class="doctor-card">
  <div class="doctor-avatar">
    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
    </svg>
  </div>
  <h3 class="doctor-name">{name}</h3>
  <p class="doctor-specialty">{specialty}</p>
  {mp && <p class="doctor-mp">{mp}</p>}
</div>

<style>
  .doctor-card {
    background: #fff;
    border: 1px solid rgba(0,116,183,0.08);
    border-radius: 16px;
    padding: 1.5rem 1rem;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
    box-shadow: 0 2px 12px -2px rgba(0,116,183,0.07);
  }
  .doctor-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 36px -6px rgba(0,116,183,0.14);
    border-color: rgba(0,116,183,0.18);
  }
  .doctor-avatar {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background: linear-gradient(135deg, #0074B7, #00A8E1);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    box-shadow: 0 6px 18px -4px rgba(0,116,183,0.35);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .doctor-card:hover .doctor-avatar {
    transform: scale(1.08);
    box-shadow: 0 10px 24px -4px rgba(0,116,183,0.45);
  }
  .doctor-name {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.88rem;
    font-weight: 700;
    color: #003554;
    margin-bottom: 4px;
    line-height: 1.3;
    letter-spacing: -0.01em;
  }
  .doctor-specialty {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    color: #0074B7;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: 4px;
  }
  .doctor-mp {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.72rem;
    font-weight: 500;
    color: #94a3b8;
    letter-spacing: 0.04em;
  }
</style>
