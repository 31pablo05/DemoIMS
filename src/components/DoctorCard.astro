---
interface Props {
  name: string;
  specialty: string;
  mp?: string;
}

const { name, specialty, mp } = Astro.props;
---

<div class="card text-center">
  <div class="w-20 h-20 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center mx-auto mb-4">
    <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
    </svg>
  </div>
  
  <h3 class="text-lg font-bold text-dark mb-1">{name}</h3>
  <p class="text-primary font-semibold mb-2">{specialty}</p>
  {mp && <p class="text-sm text-gray-600">{mp}</p>}
</div>
