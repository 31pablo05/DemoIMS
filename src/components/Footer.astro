<style>
  .ft-root {
    background: #001e36;
    color: #c8d8e8;
    font-family: 'Inter', system-ui, sans-serif;
    position: relative;
    overflow: hidden;
  }

  /* subtle radial glow */
  .ft-root::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 60% 80% at 5% 110%, rgba(0,116,183,0.12) 0%, transparent 60%),
      radial-gradient(ellipse 40% 60% at 95% -10%, rgba(0,168,225,0.08) 0%, transparent 55%);
    pointer-events: none;
  }

  /* top accent line */
  .ft-accent-bar {
    height: 3px;
    background: linear-gradient(90deg, #0074B7 0%, #00A8E1 50%, #0074B7 100%);
    background-size: 200% 100%;
    animation: shimmer-ft 4s linear infinite;
  }
  @keyframes shimmer-ft {
    0%   { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }

  .ft-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 48px 24px 0;
    position: relative;
    z-index: 1;
  }

  /* ── GRID ── */
  .ft-grid {
    display: grid;
    grid-template-columns: 1.6fr 1fr 1.2fr 1.2fr;
    gap: 40px 32px;
    padding-bottom: 40px;
    border-bottom: 1px solid rgba(255,255,255,0.08);
  }

  /* ── BRAND COL ── */
  .ft-logo-row {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 14px;
  }
  .ft-logo {
    width: 38px;
    height: 38px;
    object-fit: contain;
    filter: brightness(0) invert(1) drop-shadow(0 0 6px rgba(0,168,225,0.4));
    flex-shrink: 0;
  }
  .ft-brand-name {
    font-size: 0.95rem;
    font-weight: 700;
    color: #fff;
    line-height: 1.2;
    letter-spacing: -0.01em;
  }
  .ft-brand-sub {
    font-size: 0.72rem;
    font-weight: 500;
    color: #00A8E1;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    margin-top: 2px;
  }
  .ft-desc {
    font-size: 0.82rem;
    line-height: 1.65;
    color: rgba(200,216,232,0.75);
    margin-bottom: 20px;
    max-width: 260px;
  }
  .ft-social {
    display: flex;
    gap: 10px;
  }
  .ft-social-btn {
    width: 34px;
    height: 34px;
    border-radius: 8px;
    background: rgba(255,255,255,0.07);
    border: 1px solid rgba(255,255,255,0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(200,216,232,0.7);
    transition: background 0.2s, color 0.2s, border-color 0.2s, transform 0.2s;
    text-decoration: none;
  }
  .ft-social-btn:hover {
    background: rgba(0,116,183,0.25);
    border-color: #0074B7;
    color: #fff;
    transform: translateY(-2px);
  }

  /* ── GENERIC COL ── */
  .ft-col-title {
    font-size: 0.72rem;
    font-weight: 700;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: #00A8E1;
    margin-bottom: 16px;
  }

  /* ── NAV ── */
  .ft-nav {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .ft-nav-link {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.84rem;
    font-weight: 500;
    color: rgba(200,216,232,0.75);
    text-decoration: none;
    transition: color 0.2s, gap 0.2s;
  }
  .ft-nav-link:hover {
    color: #fff;
    gap: 12px;
  }
  .ft-nav-dot {
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: #0074B7;
    flex-shrink: 0;
    transition: background 0.2s, transform 0.2s;
  }
  .ft-nav-link:hover .ft-nav-dot {
    background: #00A8E1;
    transform: scale(1.4);
  }

  /* ── CONTACT ── */
  .ft-contact-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .ft-contact-item {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    font-size: 0.82rem;
    color: rgba(200,216,232,0.75);
    line-height: 1.5;
  }
  .ft-contact-icon {
    width: 26px;
    height: 26px;
    border-radius: 6px;
    background: rgba(0,116,183,0.18);
    border: 1px solid rgba(0,116,183,0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    color: #00A8E1;
    margin-top: 1px;
  }
  .ft-contact-icon--wa {
    background: rgba(37,211,102,0.12);
    border-color: rgba(37,211,102,0.25);
    color: #25d366;
  }
  .ft-contact-link {
    color: #fff;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s;
  }
  .ft-contact-link:hover { color: #00A8E1; }
  .ft-contact-link--wa { color: #a8f0c0; }
  .ft-contact-link--wa:hover { color: #25d366; }

  /* ── HOURS ── */
  .ft-hours {
    display: flex;
    flex-direction: column;
    gap: 14px;
  }
  .ft-guardia-badge {
    display: flex;
    align-items: center;
    gap: 10px;
    background: rgba(220,38,38,0.12);
    border: 1px solid rgba(220,38,38,0.25);
    border-radius: 10px;
    padding: 10px 14px;
  }
  .ft-guardia-pulse {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #f87171;
    flex-shrink: 0;
    position: relative;
  }
  .ft-guardia-pulse::after {
    content: '';
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    border: 2px solid #f87171;
    animation: pulse-ft 1.6s ease-out infinite;
  }
  @keyframes pulse-ft {
    0%   { opacity: 0.8; transform: scale(0.7); }
    100% { opacity: 0;   transform: scale(1.9); }
  }
  .ft-guardia-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: #fca5a5;
    letter-spacing: 0.04em;
  }
  .ft-guardia-time {
    font-size: 0.82rem;
    font-weight: 700;
    color: #fff;
    line-height: 1.2;
    margin-top: 1px;
  }
  .ft-schedule {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  .ft-schedule-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 8px;
    font-size: 0.8rem;
    padding-bottom: 8px;
    border-bottom: 1px solid rgba(255,255,255,0.06);
  }
  .ft-schedule-row:last-child { border-bottom: none; padding-bottom: 0; }
  .ft-schedule-day {
    color: rgba(200,216,232,0.65);
    font-weight: 500;
  }
  .ft-schedule-time {
    color: #fff;
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  /* ── BOTTOM BAR ── */
  .ft-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    padding: 18px 0 20px;
  }
  .ft-copy {
    font-size: 0.76rem;
    color: rgba(200,216,232,0.4);
  }
  .ft-turno-cta {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 0.78rem;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: #fff;
    background: linear-gradient(135deg, #0074B7, #00A8E1);
    padding: 8px 18px;
    border-radius: 6px;
    text-decoration: none;
    transition: opacity 0.2s, transform 0.2s;
    white-space: nowrap;
  }
  .ft-turno-cta:hover {
    opacity: 0.88;
    transform: translateY(-1px);
  }

  /* ── RESPONSIVE ── */
  @media (max-width: 900px) {
    .ft-grid {
      grid-template-columns: 1fr 1fr;
      gap: 32px 24px;
    }
    .ft-brand { grid-column: 1 / -1; }
    .ft-desc { max-width: 100%; }
  }
  @media (max-width: 560px) {
    .ft-inner { padding: 36px 20px 0; }
    .ft-grid {
      grid-template-columns: 1fr;
      gap: 28px;
      padding-bottom: 28px;
    }
    .ft-bottom {
      flex-direction: column;
      align-items: flex-start;
      gap: 12px;
    }
    .ft-turno-cta { align-self: stretch; justify-content: center; }
  }
</style>
