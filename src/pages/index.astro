---
import Layout from '../components/Layout.astro';
import HeroSlider from '../components/HeroSlider';
import ServiceCard from '../components/ServiceCard.astro';
import DoctorCard from '../components/DoctorCard.astro';
import MapEmbed from '../components/MapEmbed.astro';
import WhatsAppButton from '../components/WhatsAppButton';
import StatsSection from '../components/StatsSection.astro';
import WhyChooseUs from '../components/WhyChooseUs.astro';
import GaleriaInstalaciones from '../components/GaleriaInstalaciones.astro';

const services = [
  {
    title: 'Guardia Médica',
    description: 'Atención de urgencias y emergencias las 24 horas del día, todos los días del año.',
    link: '/horarios',
    badge: '24/7',
    badgeColor: 'red',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>`,
  },
  {
    title: 'Ginecología y Obstetricia',
    description: 'Equipo de profesionales especializados en salud de la mujer y control prenatal.',
    whatsapp: '2804666745',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>`,
  },
  {
    title: 'Neonatología',
    description: 'Atención especializada para recién nacidos y prematuros con equipo médico de alta complejidad.',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>`,
  },
  {
    title: 'Diagnóstico por Imágenes',
    description: 'Radiología, ecografía, resonador magnético abierto y densitometría ósea.',
    whatsapp: '2804692909',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>`,
  },
  {
    title: 'Internación',
    description: 'Salas de internación clínica y quirúrgica equipadas con tecnología de última generación.',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>`,
  },
  {
    title: 'Consultorio Externo',
    description: 'Consultas médicas ambulatorias con profesionales en diversas especialidades.',
    link: '/profesionales',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>`,
  },
];
---

<Layout>
  <!-- ═══════════ HERO ═══════════ -->
  <HeroSlider client:load />

  <!-- ═══════════ STATS ═══════════ -->
  <StatsSection />

  <!-- ═══════════ WHY CHOOSE US ═══════════ -->
  <WhyChooseUs />

  <!-- ═══════════ SERVICIOS ═══════════ -->
  <section class="services-section relative py-24 overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-white to-blue-50/40 pointer-events-none"></div>
    <div class="abs-blob abs-blob--1"></div>
    <div class="abs-blob abs-blob--2"></div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">

      <!-- Section Header -->
      <div class="section-header text-center mb-20">
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full section-badge mb-5">
          <span class="section-badge-dot"></span>
          <span class="text-xs font-bold uppercase tracking-widest">Servicios Médicos</span>
        </div>
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-dark leading-tight mb-5">
          Atención Médica
          <span class="gradient-text block sm:inline"> Integral</span>
        </h2>
        <p class="text-gray-500 text-lg max-w-2xl mx-auto leading-relaxed">
          Especialidades médicas y tecnología de vanguardia para cuidar tu salud en cada etapa de la vida.
        </p>
        <div class="section-divider mx-auto mt-6"></div>
      </div>

      <!-- Services Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {services.map((s, i) => (
          <div class="service-card group" style={`animation: fadeInUp 0.55s ease-out ${i * 0.08}s both`}>
            {s.badge && (
              <div class:list={['service-card__badge', s.badgeColor === 'red' ? 'service-card__badge--red' : 'service-card__badge--blue']}>
                {s.badge}
              </div>
            )}
            <div class="service-card__icon-wrap">
              <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={s.icon} />
            </div>
            <h3 class="service-card__title">{s.title}</h3>
            <p class="service-card__desc">{s.description}</p>
            <div class="service-card__actions">
              {s.link && (
                <a href={s.link} class="service-card__btn service-card__btn--outline">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/></svg>
                  Ver más
                </a>
              )}
              {s.whatsapp && (
                <a href={`https://wa.me/549${s.whatsapp}`} target="_blank" rel="noopener noreferrer" class="service-card__btn service-card__btn--whatsapp">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
                  WhatsApp
                </a>
              )}
            </div>
          </div>
        ))}
      </div>

      <!-- Bottom CTA -->
      <div class="text-center mt-16">
        <a href="/servicios" class="inline-flex items-center gap-3 px-8 py-4 rounded-2xl font-bold text-white services-cta-btn shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-0.5 group">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/></svg>
          Ver todos los servicios
          <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/></svg>
        </a>
      </div>
    </div>
  </section>

  <!-- ═══════════ GALERÍA ═══════════ -->
  <GaleriaInstalaciones />

  <!-- ═══════════ PROFESIONALES ═══════════ -->
  <section class="professionals-section relative py-24 overflow-hidden">
    <div class="absolute inset-0 bg-white pointer-events-none"></div>
    <div class="abs-blob abs-blob--3"></div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">

      <!-- Section Header -->
      <div class="text-center mb-20">
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full section-badge mb-5">
          <span class="section-badge-dot"></span>
          <span class="text-xs font-bold uppercase tracking-widest">Equipo Médico</span>
        </div>
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-dark leading-tight mb-5">
          Nuestros
          <span class="gradient-text block sm:inline"> Profesionales</span>
        </h2>
        <p class="text-gray-500 text-lg max-w-2xl mx-auto leading-relaxed">
          Médicos altamente capacitados y comprometidos con el bienestar de cada paciente.
        </p>
        <div class="section-divider mx-auto mt-6"></div>
      </div>

      <!-- Ginecología -->
      <div class="mb-16">
        <div class="specialty-header">
          <div class="specialty-icon specialty-icon--pink">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
          </div>
          <div>
            <h3 class="specialty-title">Ginecología y Obstetricia</h3>
            <p class="specialty-sub">6 profesionales especializados</p>
          </div>
          <div class="specialty-line"></div>
        </div>
        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-4 lg:gap-6">
          <div class="doctor-wrap"><DoctorCard name="Dr. Leandro González" specialty="Ginecología" /></div>
          <div class="doctor-wrap"><DoctorCard name="Dr. Esteban Greczylo" specialty="Ginecología" /></div>
          <div class="doctor-wrap"><DoctorCard name="Dr. Federico Marz" specialty="Ginecología" /></div>
          <div class="doctor-wrap"><DoctorCard name="Dra. Aylen Saldivia" specialty="Ginecología" /></div>
          <div class="doctor-wrap"><DoctorCard name="Dr. Juan Carlos Salvatierra" specialty="Ginecología" /></div>
          <div class="doctor-wrap"><DoctorCard name="Dr. Rodolfo Tommasino" specialty="Ginecología" /></div>
        </div>
      </div>

      <!-- Neonatología -->
      <div>
        <div class="specialty-header">
          <div class="specialty-icon specialty-icon--blue">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <div>
            <h3 class="specialty-title">Neonatología</h3>
            <p class="specialty-sub">4 profesionales especializados</p>
          </div>
          <div class="specialty-line"></div>
        </div>
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 lg:gap-6 max-w-3xl mx-auto">
          <div class="doctor-wrap"><DoctorCard name="Dr. Martín Pérez" specialty="Neonatología" mp="MP 3670" /></div>
          <div class="doctor-wrap"><DoctorCard name="Dr. Matías Mendelevich" specialty="Neonatología" mp="MP 3772" /></div>
          <div class="doctor-wrap"><DoctorCard name="Dr. Gustavo Kraguic" specialty="Neonatología" mp="MP 3561" /></div>
          <div class="doctor-wrap"><DoctorCard name="Dr. Fabricio Contreras" specialty="Neonatología" mp="MP 2375" /></div>
        </div>
      </div>

      <div class="text-center mt-16">
        <a href="/profesionales" class="inline-flex items-center gap-3 px-8 py-4 rounded-2xl font-bold professionals-outline-btn border-2 transition-all duration-300 hover:-translate-y-0.5 group">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
          Ver todos los profesionales
          <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/></svg>
        </a>
      </div>
    </div>
  </section>

  <!-- ═══════════ CTA URGENCIA ═══════════ -->
  <section class="cta-section relative py-28 overflow-hidden">
    <!-- Background image + overlay -->
    <div class="absolute inset-0">
      <img
        src="/imagenes/clinica/frenteims.jpg"
        alt="Instituto Médico del Sur"
        class="w-full h-full object-cover"
        loading="lazy"
      />
      <div class="absolute inset-0 cta-overlay"></div>
      <!-- Decorative circles -->
      <div class="cta-circle cta-circle--1"></div>
      <div class="cta-circle cta-circle--2"></div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="max-w-4xl mx-auto text-center text-white">

        <!-- Badge -->
        <div class="inline-flex items-center gap-2.5 px-5 py-2 rounded-full cta-badge mb-8">
          <span class="cta-pulse-dot"></span>
          <span class="font-bold text-sm tracking-wide">Atención Inmediata · 24 / 7</span>
        </div>

        <h2 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold leading-tight mb-6">
          ¿Necesitás Atención<br class="hidden sm:block"/>
          <span class="cta-headline-accent"> Médica?</span>
        </h2>
        <p class="text-lg sm:text-xl text-white/80 max-w-2xl mx-auto mb-12 leading-relaxed">
          Solicitá tu turno de forma rápida y sencilla, o comunicate con nosotros directamente.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row justify-center gap-4 sm:gap-5">
          <a href="/turnos" class="cta-btn-white group">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
            <span>Solicitar Turno Online</span>
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/></svg>
          </a>
          <a href="tel:2804421121" class="cta-btn-ghost group">
            <svg class="w-5 h-5 group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
            <span>280 4421121</span>
          </a>
        </div>

        <!-- Trust indicators -->
        <div class="flex flex-wrap justify-center gap-6 mt-12">
          {[
            { icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z', text: 'Guardia 24hs' },
            { icon: 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z', text: '10+ Profesionales' },
            { icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z', text: '30+ Años de exp.' },
          ].map(t => (
            <div class="flex items-center gap-2 text-white/70 text-sm font-medium">
              <svg class="w-4 h-4 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={t.icon}/></svg>
              {t.text}
            </div>
          ))}
        </div>

      </div>
    </div>
  </section>

  <!-- ═══════════ UBICACIÓN ═══════════ -->
  <section class="location-section relative py-24 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-slate-50 to-white pointer-events-none"></div>
    <div class="abs-blob abs-blob--4"></div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">

      <!-- Section Header -->
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full section-badge mb-5">
          <span class="section-badge-dot"></span>
          <span class="text-xs font-bold uppercase tracking-widest">Ubicación</span>
        </div>
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-dark leading-tight mb-5">
          Cómo
          <span class="gradient-text"> Llegar</span>
        </h2>
        <p class="text-gray-500 text-lg max-w-xl mx-auto">
          Encontranos en el centro de Trelew, Chubut.
        </p>
        <div class="section-divider mx-auto mt-6"></div>
      </div>

      <!-- Map + info grid -->
      <div class="grid lg:grid-cols-5 gap-8 items-start max-w-6xl mx-auto">

        <!-- Map -->
        <div class="lg:col-span-3 map-card">
          <MapEmbed />
        </div>

        <!-- Info cards -->
        <div class="lg:col-span-2 flex flex-col gap-4">
          <div class="info-card group">
            <div class="info-card__icon bg-gradient-to-br from-primary to-secondary">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <p class="info-card__label">Dirección</p>
              <p class="info-card__value">Moreno 333, Trelew</p>
              <p class="info-card__sub">Chubut, Argentina</p>
            </div>
          </div>

          <div class="info-card group">
            <div class="info-card__icon bg-gradient-to-br from-primary to-secondary">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <div>
              <p class="info-card__label">Teléfono</p>
              <a href="tel:2804421121" class="info-card__value info-card__link">280 4421121</a>
              <p class="info-card__sub">Llamadas y mensajes</p>
            </div>
          </div>

          <div class="info-card info-card--guardia group">
            <div class="info-card__icon bg-gradient-to-br from-red-500 to-red-600 relative">
              <svg class="w-6 h-6 text-white relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="guardia-pulse"></span>
            </div>
            <div>
              <p class="info-card__label text-red-500">Guardia Médica</p>
              <p class="info-card__value text-red-600">Abierto ahora · 24 hs</p>
              <p class="info-card__sub">Los 365 días del año</p>
            </div>
          </div>

          <a
            href="https://www.google.com/maps/search/?api=1&query=Moreno+333+Trelew+Chubut"
            target="_blank"
            rel="noopener noreferrer"
            class="maps-link-btn"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
            Abrir en Google Maps
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- WhatsApp Floating Button -->
  <WhatsAppButton
    client:load
    phone="2804421121"
    message="Hola, quisiera solicitar información sobre turnos."
